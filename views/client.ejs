<!-- views/client.ejs -->
<!doctype html>
<html>
<head>
	<%- include partials/header.ejs %>
	<script src="lib/js/aframe.min.js"></script>
</head>
<body>
<a-scene>
	<a-assets>
		<video id="video" autoplay="true" src="assets/vid_1.m4v" playsinline webkit-playsinline preload="auto"></video>
		<img id="true" src="/assets/true.png">
		<img id="false" src="/assets/false.png">
		<img id="splash" src="/assets/splash.png">
		<img id="splash_r" src="/assets/splash_ready.png">
		<img id="finished" src="/assets/finished.png">
		<img id="answer_1" src="/assets/mcq_mod.png">
		<img id="heart_110" src="/assets/heart_110.png">
		<img id="heart_120" src="/assets/heart_120.png">
		<img id="heart_115" src="/assets/heart_115.png">
		<audio id="bip" src="/assets/bip.ogg" preload="auto">
	</a-assets>


	<a-box id="show_splash" width="12" height="12" depth="0.01" position="-0.1 2 -10" rotation="0 0 0" scale="1 1 1" src="#splash" material="transparent:true" visible="true"></a-box>
	
	<a-box id="show_splash_r" width="4" height="4" depth="0.01" position="-0.1 2 -10" rotation="0 0 0" scale="1 1 1" src="#splash_r" material="transparent:true" visible="false"></a-box>
	<a-box id="show_finished" width="4" height="4" depth="0.01" position="-0.1 2 -10" rotation="0 0 0" scale="1 1 1" src="#finished" material="transparent:true" visible="false"></a-box>

	<a-box id="heart_img_110" width="1.5" height="1.5" depth="0.01" rotation="300 0 0"  scale="0.5 0.5 0.5" src="#heart_110" material="transparent:true" visible="false">
		<a-animation attribute="position" from="-1.4 -1 -6" to="-1.4 -0.5 -6" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>
		<a-animation attribute="position" from="-1.4 -0.5 -6" to="-1.4 -1 -6" delay="700" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>

	</a-box>

	<a-box id="heart_img_120" width="1.5" height="1.5" depth="0.01" rotation="300 0 0"  scale="0.5 0.5 0.5" src="#heart_120" material="transparent:true" visible="false">
		<a-animation attribute="position" from="-2 -1 -6" to="-2 -0.5 -6" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>
		<a-animation attribute="position" from="-2 -0.5 -6" to="-2 -1 -6" delay="700" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>

	</a-box>

	<a-box id="heart_img_115" width="1.5" height="1.5" depth="0.01"  rotation="300 0 0"  scale="0.5 0.5 0.5" src="#heart_115" material="transparent:true" visible="false">
		<a-animation attribute="position" from="-1.4 -2.5 -6" to="-1.4 -2 -6" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>
		<a-animation attribute="position" from="-1.4 -2 -6" to="-1.4 -2.5 -6" delay="700" dur="700" repeat="indefinite" easing="ease-in-out-cubic"></a-animation>

	</a-box>

<!-- MCQ SCREENS-->
	<a-entity id="mcq" visible="false">
		<a-box id="img_1" width="4" height="4" depth="0.01" rotation="0 0 0" scale="1 1 1" src="#answer_1" material="transparent:true" visible="true"></a-box>
	</a-entity>

	


    <!-- CAMERA -->
    <a-camera id="cursor" visible="true" position="0 1.8 0">
		<a-box id="answer" width="1" height="1" depth="0.01" position="0 -6 -3"   scale="0.5 0.5 0.5" src="#true" material="transparent:true" visible="true">
			<a-animation attribute="position" begin="anim" dur="1000" from="0 -6 -3" to="0 -1 -3" easing="ease-in-out-cubic" ></a-animation>
			<a-animation attribute="position" begin="anim" delay="1500" dur="1000" from="0 -1 -3" to="0 -6 -3" easing="ease-in-out-cubic" ></a-animation>
		</a-box>
	</a-camera>
	 
	<a-videosphere src="#video" rotation="0 -90 0"></a-videosphere>
    <a-entity sound="src: #bip; autoplay:true; poolSize:6"></a-entity>
</a-scene>


<script src="../socket.io/socket.io.js"></script>
<script src="lib/helpers.js"></script>
<script src="lib/client.js"></script>


</body>
</html>